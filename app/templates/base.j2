
{% from "macros.j2" import render_mitem with context %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}RPi watering system{% endblock %}
           {% block title_extra %} | Start{% endblock %}
    </title>

    {% block head_css %}
    <link rel=stylesheet type=text/css href="{{ url_for('static', filename='bootstrap/css/bootstrap.min.css') }}">
    <link rel=stylesheet type=text/css href="{{ url_for('static', filename='bootstrap/css/bootstrap-responsive.min.css') }}">
    <link rel=stylesheet type=text/css href="{{ url_for('static', filename='css/webcontrol.css') }}">
    <link rel=stylesheet type=text/css href="{{ url_for('static', filename='css/webcontrol-responsive.css') }}">
    <link rel=stylesheet type=text/css href="{{ url_for('static', filename='css/custom.css') }}">
    {% endblock %}

    <link rel="shortcut icon" href="{{ url_for('static', filename='img/favicon.ico') }}">

    {% block head_extra %} {% endblock %}

  </head>

  <body>
    {% block body %}
    <div class="wrapper">
    <div class="top-spacer-auto"></div>

    {% block navbar_top %}
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="webcontrol-icon brand" href="/">RPi watering system</a>
          <div class="nav-collapse">
            <ul class="nav">
              {% block navbar_links %}
                {{render_mitem('show_start_page',  'Start', active=active_page)}}
                {{render_mitem('hardware.control',  'Control', active=active_page)}}
                {{render_mitem('hardware.webcam',  'Webcam', active=active_page)}}
                {{render_mitem('show_about_page',  'About', active=active_page)}}
              {% endblock %}
            </ul>

            <ul class="nav pull-right">
            <li class="divider-vertical"></li>
            {# http://flask.pocoo.org/docs/api/#flask.session #}
            {% if not session.logged_in %}
                <li><a href="{{ url_for('login') }}">Log In</a></li>
            {% else %}

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Logged in as <b>{{ g.user['username'] }}</b> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ url_for('register') }}">Register User</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ url_for('logout') }}">log out</a></li>
                    </ul>
                </li>
            {% endif %}
          </ul>

          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    {% endblock %}

    <div class="container-fluid">
    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
        <div class="top-spacer-auto"></div>
        <div class="container">
        {% for category, message in messages %}
            <div class="alert alert-{{ category }} fade in"> <a href="#" data-dismiss="alert" class="close">Ã—</a> <i class="fa x-{{ category }}"></i> {{ message }} </div>
        {% endfor %}
        </div>
        {% else %}
        <div class="top-spacer-auto"></div>        
        {% endif %}
    {% endwith %}

    {% block content %}


    {% endblock %}

    </div><!--/.fluid-container-->
    {% block bottom_spacer %}<div class="bottom-spacer"><!--//--></div>{% endblock %}
   </div> <!--wrapper-->

    {% block footer %}  
        <footer class="container-fluid footer">
            <hr> <p> &copy; Copyright {{ year }} by Jan Schulz. Licensed under <a href="http://www.gnu.org/licenses/agpl-3.0.en.html">GNU AGPL v3</a>.
                <a  class="pull-right" href="#">Back to top</a> </p>
        </footer>
    {% endblock %}

    {% endblock %} {# body #}

    {% block bodyjs %}
    <!-- Le javascript ============================================ -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ url_for('static', filename='js/jquery-1.8.3.min.js') }}"></script>
    <script src="{{ url_for('static', filename='bootstrap/js/bootstrap.min.js') }}"></script>
    {% endblock %}

    {% block extrabodyjs %}{% endblock %}

  </body>
</html>
